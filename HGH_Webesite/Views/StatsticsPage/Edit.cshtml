@model HGH_Webesite.Models.StatsticsPage

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <!-- Our css -->
    <link rel="stylesheet" href="css/css.css">
    <title>StatsticsPage Edit</title>

 <style>

input {text-align: center;width:100px;}
.form-control{background-color:aliceblue;}
.btn{margin-top:10px;}


</style>


</head>
<body>

    <h4 class="text-center">صفحة إدخال بيانات الإحصائيات</h4>
    <hr />
    <div class="container text-right ">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="">
                        <label asp-for="ER" class="control-label">قسم الطوارئ</label>
                        <input asp-for="ER" class="form-control" />
                        <span asp-validation-for="ER" class="text-danger"></span>
                    </div>
                    <div class="">
                        <label asp-for="OPD" class="control-label">قسم العيادات الخارجية</label>
                        <input asp-for="OPD" class="form-control" />
                        <span asp-validation-for="OPD" class="text-danger"></span>
                    </div>
                    <div class="">
                        <label asp-for="OR" class="control-label">قسم العمليات</label>
                        <input asp-for="OR" class="form-control" />
                        <span asp-validation-for="OR" class="text-danger"></span>
                    </div>
                    <div class=">
                        <label asp-for="rays" class="control-label">قسم الأشعة</label>
                        <input asp-for="rays" class="form-control" />
                        <span asp-validation-for="rays" class="text-danger"></span>
                    </div>
                    <div class="">
                        <label asp-for="BRITH" class="control-label">قسم الولادة</label>
                        <input asp-for="BRITH" class="form-control" />
                        <span asp-validation-for="BRITH" class="text-danger"></span>
                    </div>
                    <div class="">
                        <label asp-for="LAB" class="control-label">قسم المختبر</label>
                        <input asp-for="LAB" class="form-control" />
                        <span asp-validation-for="LAB" class="text-danger"></span>
                    </div>
                    <div class="row justify-content-center">
                        <input type="submit" value="حفظ" class="btn btn-primary" />
                    </div>
                </form>
 

    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    <script src="js/jquery-3.6.0.min.js"></script>
    <script src="js/js.js"></script>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
