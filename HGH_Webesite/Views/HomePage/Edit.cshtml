@model HGH_Webesite.Models.HomePage

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <!-- Our css -->
    <link rel="stylesheet" href="css/css.css">
    <title>HomePage Edit</title>


    <style>

        input {
            text-align: center;
            width: 100px;
        }

        .form-control {
            background-color: aliceblue;
        }

        .btn {
            margin-top: 10px;
            margin-bottom:20px;
        }
    </style>


</head>
<body>

    <h4 class="text-center">صفحة إدخال بيانات الصفحة الرئيسية</h4>
    <hr />
    <div class="container text-right">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="">
                <label asp-for="img1" class="control-label">الصورة الأولى للوحة الشرف</label>
                <input asp-for="img1" class="form-control" required />
                <span asp-validation-for="img1" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="name1" class="control-label">الإسم الأول للوحة الشرف</label>
                <input asp-for="name1" class="form-control" required />
                <span asp-validation-for="name1" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="img2" class="control-label">الصورة الثانية للوحة الشرف</label>
                <input asp-for="img2" class="form-control" />
                <span asp-validation-for="img2" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="name2" class="control-label">الإسم الثاني للوحة الشرف</label>
                <input asp-for="name2" class="form-control" required />
                <span asp-validation-for="name2" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="img3" class="control-label">الصورة الثالثة للوحة الشرف</label>
                <input asp-for="img3" class="form-control" required />
                <span asp-validation-for="img3" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="name3" class="control-label">الإسم الثالث للوحة الشرف</label>
                <input asp-for="name3" class="form-control" required />
                <span asp-validation-for="name3" class="text-danger"></span>
            </div>
            <hr/>
            <div class="">
                <label asp-for="imgtitle" class="control-label">صورة الخبر</label>
                <input asp-for="imgtitle" class="form-control" required />
                <span asp-validation-for="imgtitle" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="Tilte" class="control-label">عنوان الخبر</label>
                <input asp-for="Tilte" class="form-control" required />
                <span asp-validation-for="Tilte" class="text-danger"></span>
            </div>
            <div class="row justify-content-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    <script src="js/jquery-3.6.0.min.js"></script>
    <script src="js/js.js"></script>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
